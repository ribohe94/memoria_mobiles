<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.memoria_moviles.Jugar"
    tools:showIn="@layout/activity_jugar">


    <TableLayout
        android:id="@+id/tableLayout01"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton01"
                android:background="@drawable/anim_card_01"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton02"
                android:background="@drawable/anim_card_01"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageButton05"
                android:layout_alignStart="@+id/imageButton05"
                android:layout_column="4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton03"
                android:background="@drawable/anim_card_01"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/imageButton06"
                android:layout_alignStart="@+id/imageButton06"
                android:layout_column="0" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton04"
                android:background="@drawable/anim_card_01"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton05"
                android:background="@drawable/anim_card_01"
                android:layout_alignTop="@+id/imageButton04"
                android:layout_centerHorizontal="true"
                android:layout_column="4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton06"
                android:background="@drawable/anim_card_01"
                android:layout_alignTop="@+id/imageButton05"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_column="5" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton07"
                android:background="@drawable/anim_card_01"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_column="0" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton08"
                android:background="@drawable/anim_card_01"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_column="4" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton09"
                android:background="@drawable/anim_card_01"
                android:layout_alignTop="@+id/imageButton08"
                android:layout_alignLeft="@+id/imageButton06"
                android:layout_alignStart="@+id/imageButton06"
                android:layout_column="5" />
        </TableRow>

    </TableLayout>
</RelativeLayout>