<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.LevelSelector">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/uno"
        android:id="@+id/btnNivel1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dos"
        android:id="@+id/btnNivel2"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_above="@+id/gridLayout"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tres"
        android:id="@+id/btnNivel3"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cuatro"
        android:id="@+id/btnNivel4"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cinco"
        android:id="@+id/btnNivel5"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_alignTop="@+id/gridLayout"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Niveles"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#B40404"
        android:shadowColor="#B40404"
        android:shadowRadius="1.5"
        android:shadowDx="1"
        android:shadowDy="2"
        android:textSize="60sp"
        android:layout_gravity="center"/>
</RelativeLayout>
