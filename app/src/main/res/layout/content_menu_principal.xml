<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.carlos.memoria_moviles.MenuPrincipal"
    tools:showIn="@layout/activity_menu_principal"
    android:background="@drawable/proyecto_memoria_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/Jugar"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_jugar"
            android:layout_marginBottom="40px"
            android:layout_marginTop="40px" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/MultiJugador"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_multi_jugador"
            android:layout_marginBottom="40px" />
        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/Puntuaciones"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_puntuaciones"
            android:layout_marginBottom="40px" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/Opciones"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_opciones"
            android:layout_marginBottom="40px" />
        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:id="@+id/Salir"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_salir"/>
    </LinearLayout>
</RelativeLayout>
